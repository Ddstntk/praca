{
    "name": "fabpot/silex-skeleton",
    "description": "A pre-configured skeleton for the Silex microframework",
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "~5.5",
        "silex/silex": "~2.0",
        "silex/web-profiler": "~2.0",
        "symfony/asset": "~2.8",
        "symfony/browser-kit": "~2.8",
        "symfony/class-loader": "~2.8",
        "symfony/console": "~2.8",
        "symfony/css-selector": "~2.8",
        "symfony/debug": "~2.8",
        "symfony/finder": "~2.8",
        "symfony/form": "~2.8",
        "symfony/monolog-bridge": "~2.8",
        "symfony/process": "~2.8",
        "symfony/security": "~2.8",
        "symfony/translation": "3.4",
        "symfony/twig-bridge": "~2.8",
        "symfony/validator": "~2.8",
        "twbs/bootstrap": "4.1",
        "symfony/intl": "3.4",
        "doctrine/dbal": "2.4.*"
    },
    "autoload": {
        "psr-0": { "": "src/"}
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "scripts": {
        "run": [
            "echo 'Started web server on http://localhost:8888'",
            "php -S localhost:8888 -t web"
        ]
    },
    "require-dev": {
        "sorien/silex-dbal-profiler": "^2.0"
    }
}
